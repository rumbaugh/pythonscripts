# ANSI-C compiler.

CC = gcc

# ANSI-C run-time library

CCLIB = /usr/lib/gcc/x86_64-linux-gnu/4.8/libgcc.a

# FORTRAN compiler.

FC = f77

# C and FORTRAN compilation flags.

CFLAGS = -O -Dlinux_i486_gcc
FFLAGS = -O

# Directory for executables.

BINDIR = /usr/bin

# Directory for includes.

INCDIR = /usr/include

# Directory for libraries.

LIBDIR = /usr/lib

# Directory in which the PGPLOT library can be found.

PGPLOT_LIB = -L/usr/local/pgplot -lcpgplot -lpgplot -L/usr/lib/x86_64-linux-gnu/ -lX11

# Loader flags.

LDFLAGS = 

# Symbolic link creation.

LN = ln -s

# The way to invoke ranlib.

RANLIB = ranlib

# The flags used by cpg_src/pgbind.

PGBIND_FLAGS = bsd

